{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug TypeScript Server",
        "program": "${workspaceFolder}/src/server.ts",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "preLaunchTask": "tsc: watch - tsconfig.json",
        "runtimeArgs": ["--nolazy"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }